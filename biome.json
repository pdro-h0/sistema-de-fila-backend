{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	  },
	  "formatter": {
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 80
	  },
	  "javascript": {
		"formatter": {
		  "jsxQuoteStyle": "double",
		  "quoteStyle": "double",
		  "semicolons": "asNeeded",
		  "trailingCommas": "es5"
		}
	  },
	  "linter": {
		"enabled": true,
		"rules": {
		  "recommended": false,
		  "a11y": {
			"noSvgWithoutTitle": "off"
		  },
		  "suspicious": {
			"noArrayIndexKey": "info"
		  }
		}
	  },
	  "files": {
		"ignore": ["node_modules"]
	  }
}
